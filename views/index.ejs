<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Status dos Voos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="mb-4">Verificação de Voos</h1>
    <form action="/upload" method="post" enctype="multipart/form-data" class="mb-5">
      <div class="mb-3">
        <input type="file" name="planilha" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-primary">Enviar Planilha</button>
    </form>

    <% if (results) { %>
      <h2>Resultado:</h2>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Localizador</th>
            <th>Origem</th>
            <th>Sobrenome</th>
            <th>Companhia</th>
            <th>Data do Voo</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach(result => { %>
            <tr>
              <td><%= result.nome %></td>
              <td><%= result.localizador %></td>
              <td><%= result.origem || "N/A" %></td>
              <td><%= result.sobrenome %></td>
              <td><%= result.companhia %></td>
              <td><%= result.data || "Indefinido" %></td>
              <td>
                <% if (result.status === 'Erro') { %>
                  <span class="text-danger"><%= result.status %></span>
                <% } else if (result.status === 'Não compatível') { %>
                  <span class="text-info"><%= result.status %></span> 
                <% } else if (result.status === 'Alterado') { %>
                  <span class="text-warning fw-bold"><%= result.status %></span>
                <% } else { %>
                  <span class="text-success"><%= result.status %></span>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>

    <div id="progresso-container" style="display:none; margin-top:20px;">
      <p>Progresso: <span id="progresso-texto">0%</span></p>
      <div style="background:#ccc; width:100%; height:20px;">
        <div id="barra-progresso" style="background:green; width:0%; height:100%;"></div>
      </div>
    </div>
  </div>

  <script>
    async function verificarProgresso() {
      const resposta = await fetch('/progresso');
      const { porcentagem } = await resposta.json();
      document.getElementById("progresso-container").style.display = "block";
      document.getElementById("barra-progresso").style.width = porcentagem + '%';
      document.getElementById("progresso-texto").innerText = porcentagem + '%';

      if (porcentagem < 100) {
        setTimeout(verificarProgresso, 1000);
      }
    }

    const form = document.querySelector("form");
    if (form) {
      form.addEventListener("submit", () => {
        setTimeout(verificarProgresso, 500);
      });
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
